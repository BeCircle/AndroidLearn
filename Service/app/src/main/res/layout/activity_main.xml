<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_svc_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start"
        />

    <Button
        android:id="@+id/btn_svc_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/svc_stop"
        />

    <Button
        android:id="@+id/btn_svc_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/svc_bind"
        />

    <Button
        android:id="@+id/btn_svc_unbind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/svc_unbind"
        />
    <Button
        android:id="@+id/btn_int_svc_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/intent_svc"
        />

</LinearLayout>